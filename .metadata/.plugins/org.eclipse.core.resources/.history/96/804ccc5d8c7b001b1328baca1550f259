package br.com.lead.controller;

import javax.persistence.EntityManager;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;
import br.com.lead.modelo.Autor;
import br.com.lead.util.JPAUtil;

@Controller
public class AutorController {
	@RequestMapping(value = "/persistir-autor", method = RequestMethod.POST, produces = "application/json")
	@ResponseBody
	public Autor persistirAutor(@RequestBody Autor autor) {
		EntityManager entityManager = JPAUtil.getEntityManager();
	
	    entityManager.getTransaction().begin();
	    entityManager.persist(autor.getAutor());
	    entityManager.persist(autor);
	    entityManager.getTransaction().commit();
	    entityManager.close();       
	    
	    return autor;
	}
	
	@RequestMapping(value="/consultar-autor", method = RequestMethod.GET, produces = "application/json")
	@ResponseBody
	public Autor consultarAutor(@RequestParam Integer id) {
		EntityManager entityManager = JPAUtil.getEntityManager();
		
		Autor autor = entityManager.find(Autor.class, id);
		
		return autor; 
	    
	}
}
